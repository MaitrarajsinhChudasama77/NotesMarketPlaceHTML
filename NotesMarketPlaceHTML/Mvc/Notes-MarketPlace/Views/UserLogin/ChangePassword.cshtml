@model Notes_MarketPlace.Models.ChangePasswordModel
<!DOCTYPE html>
<html lang="en">
<head>

    <!--meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1.0,user-scalable=no">

    <!--title-->
    <title>Notes - MarketPlace</title>

    <!--fav icon-->
    <link rel="shortcut icon" href="~/Content/user/image/home/favicon.ico">

    <!--google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!--font awesome css-->
    <link rel="stylesheet" href="~/Content/user/font-awesome/css/font-awesome.css">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/user/Bootstrap/bootstrap.css">

    <!--external css-->
    <link rel="stylesheet" href="~/Content/user/css/style.css">

    <!--responsive css-->
    <link rel="stylesheet" href="~/Content/user/css/responsive.css">

    <!--Validation-->
    <style>
        .error {
            font-family: Open Sans;
            font-size: 13px;
            color: red;
        }

        .green-color {
            color: green;
            font-size: 21px;
        }
    </style>

</head>
<body>
    <div class="bg-image">
        <div class="about-item text-center">
            <img id="logo-img" src="~/Content/user/image/top-logo.png" alt="LoginPage" width="180px" height="30px">
        </div>
        <div class="change-password-form-container">
            @using (Html.BeginForm("ChangePassword", "UserLogin", FormMethod.Post))
            {
                <div class="title-heading about-item text-center">
                    <h2>Change Password</h2>
                    <p>Enter your new password to change your password</p>
                    @if (TempData["Success"] != null)
                    {
                        <b style="font-family:Open Sans;font-size:16px;color:green"><i class="fa fa-check-circle green-color"></i> @TempData["Success"]</b>
                    }
                </div>
                <div class="form-group">
                    <label class="label-class" id="old-password-lbl" for="formGroupExampleInput2">Old Password</label>
                    @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control input-field", @id = "password", @placeholder = "Enter your old password" })
                    @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "error" })
                    <i toggle="#password" class="fa fa-eye-slash field-icon toggle-password" aria-hidden="true"></i>
                    <!--
                        <input type="password" class="form-control input-field" id="password" placeholder="Enter your old password">
                    -->
                </div>
                <div class="form-group">
                    <label class="label-class" id="password-lbl" for="formGroupExampleInput2">New Password</label>
                    @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control input-field", @id = "newpassword", @placeholder = "Enter your new password" })
                    @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "error" })
                    <i toggle="#newpassword" class="fa fa-eye-slash field-icon toggle-password" aria-hidden="true"></i>
                    <!--
                        <input type="password" class="form-control input-field" id="password" placeholder="Enter your new password">
                    -->
                </div>
                <div class="form-group">
                    <label class="label-class" id="password-lbl" for="formGroupExampleInput2">Confirm Password</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control input-field", @id = "confirmpassword", @placeholder = "Enter your confirm password" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "error" })
                    <i toggle="#confirmpassword" class="fa fa-eye-slash field-icon toggle-password" aria-hidden="true"></i>
                    <!--
                        <input type="password" class="form-control input-field" id="password" placeholder="Enter your confirm password">
                    -->
                </div>
                <button type="submit" class="btn btn-primary btn-block" id="submit-button">SUBMIT</button>
            }
        </div>
    </div>
    <!--Jquery-->
    <script src="~/Scripts/user/jQuery-3.5.1.js"></script>
    <!--Bootstrap Js-->
    <script src="~/Scripts/user/bootstrap/bootstrap.js"></script>
    <!--script.js-->
    <script src="~/Scripts/user/script.js"></script>
    <!--validation js-->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>



