@model Notes_MarketPlace.Models.User
<!DOCTYPE html>
<html lang="en">
<head>

    <!--meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--title-->
    <title>Notes - MarketPlace</title>

    <!--fav icon-->
    <link rel="shortcut icon" href="~/Content/user/image/home/favicon.ico">

    <!--font awesome-->
    <link rel="stylesheet" href="~/Content/user/font-awesome/css/font-awesome.css">

    <!--google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/user/Bootstrap/bootstrap.css">

    <!--external css-->
    <link rel="stylesheet" href="~/Content/user/css/signup.css">

    <!--reponsive css-->
    <link rel="stylesheet" href="~/Content/user/css/responsive.css">

    <!--Validation-->
    <style>
        .error {
            font-family: Open Sans;
            font-size: 13px;
            color: red;
        }
        .green-color{color:green;font-size:21px;}
    </style>
</head>
<body>

    <div class="bg-image">
        <div class="about-item text-center">
            <img id="logo-img-signup" src="~/Content/user/image/top-logo.png" alt="LoginPage" width="180px" height="30px">
        </div>
        <div class="signup-form-container">
            @using (Html.BeginForm("CreateUser", "UserLogin", FormMethod.Post))
            {
                <div class="title-heading about-item text-center">
                    <h2>Create An Account</h2>
                    <p>Enter your details to signup</p>
                    @if (TempData["Success"] != null)
                    {
                        <b style="font-family:Open Sans;font-size:16px;color:green"><i class="fa fa-check-circle green-color"></i> @TempData["Success"]</b>
                    }
                </div>

                <div class="form-group">
                    <label id="firstname" for="formGroupExampleInput2">First Name *</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @id = "Inputfirstname", @placeholder = "Enter your first name" })
                    @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    <label class="label-class-signup" for="formGroupExampleInput2">Last Name *</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @id = "Inputlastname", @placeholder = "Enter your last name" })
                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "error" })


                </div>
                <div class="form-group">
                    <label class="label-class-signup" for="formGroupExampleInput2">Email *</label>
                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Enter your email address" })
                    @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="label-class-signup" for="formGroupExampleInput2">Password</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control input-field", @id = "password", @placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })
                    <i toggle="#password" class="fa fa-eye-slash field-icon toggle-password" aria-hidden="true"></i>
                </div>
                <div class="form-group">
                    <label id="password-lbl-signup" class="label-class" for="formGroupExampleInput2">Confirm Password</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control input-field", @id = "confirmpassword", @placeholder = "Re-enter your password" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "error" })
                    <i toggle="#confirmpassword" class="fa fa-eye-slash field-icon toggle-password" aria-hidden="true"></i>
                </div>
                <button type="submit" class="btn btn-primary btn-block" id="sign-up-button">SIGN UP</button>
                <div class="login-bottom label-text">
                    <p>Already have an account? <a href="@Url.Action("Login", "UserLogin")">Login</a></p>
                </div>
            }
        </div>
    </div>
    <!--Jquery-->
    <script src="~/Scripts/user/jQuery-3.5.1.js"></script>
    <!--Bootstrap Js-->
    <script src="~/Scripts/user/bootstrap/bootstrap.js"></script>
    <!--script.js-->
    <script src="~/Scripts/user/script.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>
