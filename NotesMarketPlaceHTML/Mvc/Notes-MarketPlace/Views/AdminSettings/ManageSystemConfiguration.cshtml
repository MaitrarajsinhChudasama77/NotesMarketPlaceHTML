@model Notes_MarketPlace.Models.ManageSysConfigModel
<!DOCTYPE html>
<html lang="en">
<head>

    <!--meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--title-->
    <title>Notes - MarketPlace</title>

    <!--fav icon-->
    <link rel="shortcut icon" href="~/Content/admin/image/home/favicon.ico">

    <!--google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/admin/Bootstrap/bootstrap.css">

    <!--font awesome css-->
    <link rel="stylesheet" href="~/Content/admin/font-awesome/css/font-awesome.css">

    <!--external css-->
    <link rel="stylesheet" href="~/Content/admin/style.css">

    <!--responsive css-->
    <link rel="stylesheet" href="~/Content/admin/responsive.css">

</head>
<body>
    <section>
        <header>
            <nav id="mynav" class="nav navbar-fixed-top white-nav-top">
                <div class="container">
                    <div class="site-nav-wrapper">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="hamburger-icon">&#9776;</span>
                            </button>
                            <a class="logo" href="@Url.Action("Home","Home")"><img src="~/Content/admin/image/home/logo.png" id="notes-logo" alt="Logo" width="180"></a>
                        </div>
                        <div class="container">
                            <div class="collapse navbar-collapse" id="myNavbar">
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="@Url.Action("Dashboard","AdminDashboard")">Dashboard</a></li>
                                    <li class="nav-item-drop-down">
                                        <a data-toggle="dropdown">Notes</a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item" href="@Url.Action("NotesUnderReview","AdminNotes")">Notes Under Review</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("PublishedNotes","AdminNotes")">Published Notes</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("DownloadedNotes","AdminNotes")">Downloaded Notes</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("RejectedNotes","AdminNotes")">Rejected Notes</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="@Url.Action("Members","AdminMembers")">Members</a></li>
                                    <li class="nav-item-drop-down">
                                        <a data-toggle="dropdown">Reports</a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item" href="@Url.Action("SpamReports","AdminReports")">Spam Reports</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item-drop-down">
                                        <a data-toggle="dropdown">Settings</a>
                                        <ul id="simplehover" class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item" href="@Url.Action("ManageSystemConfiguration","AdminSettings")">Manage System Configuration</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ManageAdministrator","AdminSettings")">Manage Administrator</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ManageCategory","AdminSettings")">Manage Category</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ManageType","AdminSettings")">Manage Type</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ManageCountry","AdminSettings")">Manage Country</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item-drop-down">
                                        <a style="padding-top: 0px; padding-bottom: 0px;" data-toggle="dropdown"><img class="navbar-user-photo" src="../@ViewBag.pic" /></a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li><a class="dropdown-item" href="@Url.Action("MyProfile","AdminProfile")">Update Profile</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("ChangePassword","UserLogin")">Change Password</a></li>
                                            <li><a class="dropdown-item logout-special" onclick="if(confirm('Are you sure, you want to logout?')) location.href='@Url.Action("Logout","AdminProfile")'">LOGOUT</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <button onclick="if(confirm('Are you sure, you want to logout?')) location.href = '@Url.Action("Logout","AdminProfile")'" class="btn btn-class last-child" type="submit">Logout</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="content-box-lg myprofile-content-box">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h4 id="myprofile-heading">Manage System Configuration</h4>
                        </div>
                    </div>
                </div>
                <div id="form-div" class="row">
                    @using (Html.BeginForm("ManageSystemConfiguration", "AdminSettings", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Support email address *</label>
                                    @Html.TextBoxFor(x => x.SupportEmail, new { @class = "form-control", @id = "supportemailsaddress", @placeholder = "Enter email address" })
                                    @Html.ValidationMessageFor(x => x.SupportEmail, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Support phone number *</label>
                                    @Html.TextBoxFor(x => x.SupportContactNumber, new { @class = "form-control", @id = "phonenumber", @placeholder = "Enter phone number" })
                                    @Html.ValidationMessageFor(x => x.SupportContactNumber, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Email Address(es) (for various events system will send notifications to these users) *</label>
                                    @Html.TextBoxFor(x => x.EmailAddress_es, new { @class = "form-control", @placeholder = "Enter email address" })
                                    @Html.ValidationMessageFor(x => x.EmailAddress_es, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Facebook URL</label>
                                    @Html.TextBoxFor(x => x.FacebookURL, new { @class = "form-control", @placeholder = "Enter facebook url" })
                                    @Html.ValidationMessageFor(x => x.FacebookURL, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Twitter URL</label>
                                    @Html.TextBoxFor(x => x.TwitterURL, new { @class = "form-control", @id = "subject", @placeholder = "Enter twitter url" })
                                    @Html.ValidationMessageFor(x => x.TwitterURL, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                    <label class="label-class">Linkedin URL</label>
                                    @Html.TextBoxFor(x => x.LinkedInURL, new { @class = "form-control", @id = "subject", @placeholder = "Enter linkedin url" })
                                    @Html.ValidationMessageFor(x => x.LinkedInURL, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12">
                                    <label class="label-class">Default image for notes (if seller do not upload)</label>
                                    @Html.TextBoxFor(x => x.DefaultNoteDisplayImage, new { @class = "form-control", @id = "comments", @placeholder = "Upload a picture", @onchange = "return picturevalidation()", type = "file" })
                                    <img src="~/Content/admin/image/Userprofile/upload.png" alt="upload" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-sm-12">
                                    <label class="label-class">Default profile picture (if seller do not upload)</label>
                                    @Html.TextBoxFor(x => x.DefaultProfilePicture, new { @class = "form-control", @id = "comments", @placeholder = "Upload a picture", @onchange = "return picturevalidation()", type = "file" })
                                    <img src="~/Content/admin/image/Userprofile/upload.png" alt="upload" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12-md-12 col-sm-12 col-xs-12">
                                <button id="myprofile-submit" type="submit" class="btn btn-primary">SUBMIT</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <footer class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                        <div class="footer-text-1">
                            <p>
                                Version: 1.1.24
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                        <div class="footer-text-2">
                            <p>
                                Copyright &copy; Tatvasoft All Rights Reserved
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </section>
    <!--Jquery-->
    <script src="~/Scripts/admin/jQuery-3.5.1.js"></script>
    <!--Bootstrap Js-->
    <script src="~/Scripts/admin/bootstrap/bootstrap.js"></script>
    <!--script.js-->
    <script src="~/Scripts/admin/script.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>