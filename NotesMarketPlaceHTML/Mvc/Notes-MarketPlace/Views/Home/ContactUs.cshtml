@model Notes_MarketPlace.Models.ContactUsModel
<!DOCTYPE html>
<html lang="en">
<head>

    <!--meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1.0,user-scalable=no">

    <!--title-->
    <title>Notes - MarketPlace</title>

    <!--fav icon-->
    <link rel="shortcut icon" href="~/Content/user/image/home/favicon.ico">

    <!--google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/user/Bootstrap/bootstrap.css">

    <!--font awesome css-->
    <link rel="stylesheet" href="~/Content/user/font-awesome/css/font-awesome.css">

    <!--external css-->
    <link rel="stylesheet" href="~/Content/user/css/style.css">

    <!--responsive css-->
    <link rel="stylesheet" href="~/Content/user/css/responsive.css">

    <!--Validation-->
    <style>
        .error {
            color: red;
        }
    </style>

</head>

<body>
    <section id="contact-us-page">
        <header>
            <nav id="mynav" class="nav navbar-fixed-top white-nav-top">
                <div class="container">
                    <div class="site-nav-wrapper">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="hamburger-icon">&#9776;</span>
                            </button>
                            <a class="logo"><img src="~/Content/user/image/home/logo.png" id="notes-logo" alt="Logo" width="180px"></a>
                        </div>
                        <div class="container">
                            <div class="collapse navbar-collapse" id="myNavbar">
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="@Url.Action("SearchNotes", "Home")">Search Notes</a></li>
                                    <li><a href="@Url.Action("Dashboard", "Home")">Sell Your Notes</a></li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li><a href="@Url.Action("BuyerRequests","Home")">Buyer Requests</a></li>
                                    }
                                    <li><a href="@Url.Action("FAQ", "Home")">FAQ</a></li>
                                    <li><a href="@Url.Action("ContactUs", "Home")">Contact Us</a></li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item-drop-down">
                                            <a style="padding-top: 0px; padding-bottom: 0px;" data-toggle="dropdown"><img class="navbar-user-photo" src="../@ViewBag.pic" /></a>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li><a class="dropdown-item" href="@Url.Action("UserProfile","Profile")" style="padding-top:10px;padding-bottom:10px;padding-left:7px;Open Sans;font-size:14px;color:#6255a5;">My Profile</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("MyDownloads","Profile")" style="padding-top: 10px;padding-bottom:10px; padding-left: 7px; font-family: Open Sans; font-size: 14px; color: #6255a5;">My Downloads</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("MySoldNotes","Profile")" style="padding-top: 10px;padding-bottom:10px; padding-left: 7px; font-family: Open Sans; font-size: 14px; color: #6255a5;">My Sold Notes</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("MyRejectedNotes","Profile")" style="padding-top: 10px;padding-bottom:10px; padding-left: 7px; font-family: Open Sans; font-size: 14px; color: #6255a5;">My Rejected Notes</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("ChangePassword","UserLogin")" style="padding-top: 10px;padding-bottom:10px; padding-left: 7px; font-family: Open Sans; font-size: 14px; color: #6255a5;">Change Password</a></li>
                                                <li><a class="dropdown-item row-color" href="@Url.Action("Logout","UserLogin")" style="padding-top: 10px; padding-bottom:10px;padding-left: 7px; font-family: Open Sans; font-size: 14px; color: #6255a5;">Logout</a></li>
                                            </ul>
                                        </li>
                                    }
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <button id="contactus-log-button" onclick="location.href='@Url.Action("Logout","UserLogin")'" class="btn btn-class last-child" type="submit">Logout</button>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <button id="contactus-log-button" onclick="location.href='@Url.Action("Login","UserLogin")'" class="btn btn-class last-child" type="submit">Login</button>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </nav>
        </header>
        <div id="statement-div">
            <div class="container">
                <div id="tech-statement" class="text-center">
                    <p>Contact Us</p>
                </div>
            </div>
        </div>
        <div class="content-box-lg contact-us-content-box">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h4>Get in Touch</h4>
                        </div>
                        <div class="small-heading text-left">
                            Let us know how to get back to you
                        </div>
                    </div>
                </div>
                <div id="form-div" class="row">
                    @using (Html.BeginForm("ContactAdmin", "Home", FormMethod.Post))
                    {
                        <div class="col-md-6">
                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="label-class" for="formGroupExampleInput2">Full Name *</label>
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Enter your full name" })
                                    @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="label-class" for="formGroupExampleInput2">Email Address *</label>
                                    @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control", @placeholder = "Enter your email address" })
                                    @Html.ValidationMessageFor(x => x.EmailId, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="label-class">Subject *</label>
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Enter your subject" })
                                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "error" })
                                </div>
                            </div>
                        </div>
                        <div id="comments-div" class="col-md-6">
                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="label-class">Comments / Questions *</label>
                                    @Html.TextAreaFor(x => x.Comments_Questions, new { @class = "form-control", @id = "comments", @placeholder = "Comments..." })
                                    @Html.ValidationMessageFor(x => x.Comments_Questions, "", new { @class = "error" })
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <button id="submit-button" type="submit" class="btn btn-primary">SUBMIT</button>
                            </div>
                        </div>

                    }
                </div>
            </div>

        </div>
        <footer>
            <div class="container">

                <div class="row">

                    <div class="col-md-10">
                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved
                        </p>
                    </div>

                    <div class="col-md-2 text-center">
                        <ul class="social-list">
                            <li>
                                <a href="#">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

    </section>

    <!--Jquery-->
    <script src="~/Scripts/user/jQuery-3.5.1.js"></script>
    <!--Bootstrap Js-->
    <script src="~/Scripts/user/bootstrap/bootstrap.js"></script>
    <!--script.js-->
    <script src="~/Scripts/user/script.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
