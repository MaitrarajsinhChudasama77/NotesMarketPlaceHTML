                                        <button id = "dashboard-log-button" role="button" onclick="location.href = '@Url.Action("Logout","UserLogin")' " class="btn btn-class last-child smooth-scroll">Logout</button>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </nav>
        </header>
        <div class="content-box-lg dashboard-content-box-1">
